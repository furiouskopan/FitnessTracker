@model FitnessTracker.ViewModels.ExerciseLogViewModel

<style>
    /* Your existing styles */
    .form-group {
        margin-bottom: 0.2rem;
    }

    .form-control {
        max-width: 300px;
    }

    .btn {
        margin-top: 1rem;
    }

    .label-tooltip {
        cursor: pointer;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

    th, td {
        padding: 0.5rem;
        border-bottom: 1px solid #ccc;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f9f9f9;
    }

    h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .update-form {
        max-width: 400px;
        padding: 1rem;
    }

    .form-input {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .form-submit {
        background-color: #007bff;
        color: #fff;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<div class="update-form">
    <h2>Update Exercise Log for @Model.ExerciseName</h2>

    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ExerciseId" />
        <div class="form-group">
            <label asp-for="Date">Date:</label>
            <input asp-for="Date" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Weight">Weight:</label>
            <input asp-for="Weight" type="number" min="0" class="form-control form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Reps">Reps:</label>
            <input asp-for="Reps" type="number" min="1" class="form-control form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Sets">Sets:</label>
            <input asp-for="Sets" type="number" min="1" max="10" class="form-control form-input" />
        </div>
        <div class="form-group">
            <label asp-for="RPE" class="label-tooltip" data-toggle="tooltip" data-placement="right" title="Rate of Perceived Exertion (RPE): On a scale of 1-10, how hard do you feel like you're working?">RPE:</label>
            <input asp-for="RPE" type="number" min="5" max="10" class="form-control form-input" />
        </div>
        <div class="form-group">
            <label asp-for="RiR" class="label-tooltip" data-toggle="tooltip" data-placement="right" title="Reps in Reserve (RiR): This is the number of reps you feel you still could have done after your set.">RiR:</label>
            <input asp-for="RiR" type="number" min="0" max="5" class="form-control form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" type="text" maxlength="60" class="form-control form-input" />
        </div>
        <!-- Add more fields as necessary -->
        <input type="submit" value="Update" class="form-submit" />
    </form>
</div>
