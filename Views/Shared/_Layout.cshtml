<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessTracker.styles.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-smborder-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="ExerciseLog" asp-action="LogList">FitnessTracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
@*                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>*@
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Exercise" asp-action="Index">Exercises</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Exercise" asp-action="Create">Create Exercise</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="ExerciseLog" asp-action="LogList">Exercise Log List</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Exercise" asp-action="ExerciseLog">Create Exercise Log</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    body {
        background-color: #3A4E6D; /* dark metallic blue */
        color: #ffffff; /* white text for contrast */
        background-image: url('/5137843.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .navbar {
        background-color: #3e3e40; /* slightly darker blue for the navbar */
        color: #ffffff; /* white text for contrast */
    }
    .navbar a {
        color: #ffffff; /* white text for contrast */
    }

    .container {
        color: #000000; /* black text for contrast */
        border-radius: 10px; /* rounded corners */
        padding: 20px; /* some padding */
        margin-top: 20px; /* some margin to separate from the navbar */
    }
</style>